cd backend/projectify/theme/static_src
npm run build

if ! git diff --exit-code --quiet HEAD -- backend/projectify/theme/static/css/dist/styles.css; then
    echo "Tailwind styles have been updated"
    echo "Please commit"
    exit 1
fi
